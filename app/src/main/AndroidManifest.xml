<?xml version="1.0" encoding="utf-8"?>

<manifest
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" package="eu.czsoft.legacygreecontrol">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/Theme.GreeControl"
            android:localeConfig="@xml/locale_config" tools:targetApi="tiramisu">

        <activity
                android:exported="true"
                android:name="eu.czsoft.legacygreecontrol.MainActivity"
                android:theme="@style/Theme.GreeControl.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name="eu.czsoft.legacygreecontrol.DeviceActivity"
                android:parentActivityName="eu.czsoft.legacygreecontrol.MainActivity"
                android:launchMode="singleTop"/>
        <activity
                android:name="eu.czsoft.legacygreecontrol.DeviceHelpActivity"
                android:parentActivityName="eu.czsoft.legacygreecontrol.DeviceActivity"/>
    </application>

</manifest>